class Item:
    def __init__(self, dado):
        self.dado = dado
        self.prox = None

class ListaEncadeadaSimples:
    def __init__(self):
        self.inicio = None
        self.fim = None

    def is_empty(self):
        return self.inicio is None

    def inserir(self, item):
        novo_item = Item(item)
        if self.is_empty():
            self.inicio = novo_item
            self.fim = novo_item
        else:
            self.fim.prox = novo_item
            self.fim = novo_item

    def remover(self):
        if self.is_empty():
            raise IndexError("A lista est√° vazia")
        valor = self.inicio.dado
        self.inicio = self.inicio.prox
        if self.inicio is None:
            self.fim = None
        return valor
